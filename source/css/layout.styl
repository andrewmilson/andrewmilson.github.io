body, html
  padding 0
  margin 0
  height 100%
  font-family "Droid Sans"

*
  box-sizing border-box
  color #172323

a
  color #428bca
  text-decoration none


.text-center
  text-align center


hr
  border none
  border-bottom dotted 2px #172323
  padding 0
  margin 20px 0

h1, h2, h3, h4, h5, h6
  font-family inherit
  font-weight bold
  line-height 1.1
  color inherit

  small
    font-weight normal
    line-height 1

h1, h2, h3
  margin-top 35px
  margin-bottom 20px

h1
  font-size 36px

h2
  font-size 30px

h3
  font-size 24px

h4
  font-size 18px

h5
  font-size 14px

h6
  font-size 12px

p
  margin 0 0 10px

.btn
  display inline-block
  padding 6px 12px
  margin 0 0 0 0
  font-size 14px
  font-weight normal
  line-height 1.42857143
  text-align center
  white-space nowrap
  vertical-align middle
  cursor pointer
  user-select none
  background-image none
  border-bottom rgba(20, 20, 20, 0.15) 5px solid

  &.default
    color #333
    background-color #bbb
  
  &.primary
    color #e9e9e9
    background-color #4B7890

  &.danger
    color #333
    background-color #fbca54

  &.warning
    color #333
    background-color #fc575e

  &.success
    color #333
    background-color #9CCA68

  &.info
    color #333
    background-color #80ceff

  &.dark
    color #e9e9e9
    background-color #3e5c6d

#article
  p
    font-size 1.2em
    line-height 1.5
